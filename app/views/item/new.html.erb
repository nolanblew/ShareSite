<% provide(:title, "Create") %>
<h1>Sign up</h1>

<div>
  <div>
    <%= form_for(@item) do |f| %>

      <%=f.label :name, "Item name" %>
      <%=f.text_field :name %>

      <%=f.label :description, "Description of the item" %>
      <%=f.text_field :description %>

      <%=f.label :condition, "Condition of the item" %>
      <%=f.text_field :condition %>

      <%=f.label :category_id, "Category" %>
      <%=f.text_field :category_id %>

      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>