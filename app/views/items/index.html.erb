
<h2>My Items</h2>

<p>
    <a href="/items/new">Create</a>
</p>
<table class="displayThings">
    <tr>
        <th>
            Item Title
        </th>
        <th>
            Description
        </th>
        <th>
            Condition
        </th>
        <th>
            Category
        </th>
        <th>
            Visible to the Public
        </th>
        <th></th>
    </tr>

<% Item.all.each do |item| %>
	<% if(item.user.id == current_user.id) %>
    <tr>
        <td>
            <%= item.name %>
        </td>
        <td>
            <%= item.description %>
        </td>
        <td>
            <%= item.condition %>
        </td>
        <td>
            <%= item.category_id %>
        </td>
        <td>
            True
        </td>
        <td>
            <a href="/items/edit?id=<%= item.id %>">Edit</a>/<a href="">Details</a>/<a href="">Delete</a>
        </td>
    </tr>
	<% end %>
<% end  %>

</table>