<% provide(:title, "Create") %>
<h1>Create</h1>

<div>
  <div>
    <%= form_for(@item) do |f| %>
	  <%= render 'error_messages', object: f.object %>

      <div class="editor-label">
	  <%=f.label :name, "Item name" %>
	  </div>
	  <div class="editor-field">
      <%=f.text_field :name, :class => "txtInput" %>
	  </div>

      <div class="editor-label">
	  <%=f.label :description, "Description of the item" %>
	  </div>
	  <div class="editor-field">
      <%=f.text_field :description, :class => "txtInput" %>
	  </div>
      
	  <div class="editor-label">
	  <%=f.label :condition, "Condition of the item" %>
	  </div>
	  <div class="editor-field">
	  <%=f.select(:condition, [["New", 0],
								["Great", 1],
								["Good", 2],
								["Fair", 3],
								["Poor", 4],
								["Completely Destroyed", 5]]) %>
	  </div>

      <div class="editor-label">
	  <%=f.label :category_id, "Category" %>
	  </div>
	  <div class="editor-field">
	  <%=f.text_field :category_id, :class => "txtInput" %>
	  </div>
	  
	  <%= @user %>
      <%= f.submit "Create" %>
    <% end %>
  </div>
</div>